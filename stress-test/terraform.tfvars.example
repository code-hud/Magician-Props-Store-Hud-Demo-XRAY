# Project Configuration
project_name = "magician-props-store-demo"  # Unique prefix for all resource names

# AWS Configuration
aws_region = "us-east-2"

# Hud SDK Configuration
hud_api_key = "your-hud-api-key-here"

# Git Configuration
git_commit_hash = "unknown"

# Backend Resources
backend_cpu    = 512   # CPU units (256, 512, 1024, 2048, 4096)
backend_memory = 2048  # Memory in MB

# K6 Load Test Configuration
k6_duration = "5m"  # Duration (e.g., "5m", "10m", "1h")
k6_vus      = 50    # Virtual users

# Continuous Load Generator
load_generator_enabled = true  # Enable/disable continuous load
load_generator_rps     = 5     # Requests per second
